@model ErrorViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Error"];
}
<div class="container">
    <div class="alert alert-danger" role="alert">
        @if (string.IsNullOrEmpty(Model.ErrorTitle))
        {
            <h4 class="alert-heading">@Localizer["DefaultTitle"]</h4>
        }
        else
        {
            <h4 class="alert-heading">@Model.ErrorTitle</h4>
        }
        <hr />
        @if(string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p>@Localizer["DefaultMessage", "someaddress@problem.com"]</p>
        }
        else
        {
            <p>@Model.ErrorMessage</p>
        }
    </div>
</div>