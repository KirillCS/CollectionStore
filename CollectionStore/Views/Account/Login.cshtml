@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <header class="card-header">
                    <h4 class="text-center">Login</h4>
                </header>
                <article class="card-body">
                    <form asp-controller="Account" asp-action="Login" asp-route-returlUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                            <label class="col-form-label" for="usernameField">Username</label>
                            <input asp-for="UserName" class="form-control" id="usernameField"/>
                            <small><span asp-validation-for="UserName" class="text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label" for="passwordField">Password</label>
                            <input asp-for="Password" class="form-control" id="passwordField"/>
                            <small><span asp-validation-for="Password" class="text-danger"></span></small>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="rememberCheckBox" />
                            <label class="form-check-label" for="rememberCheckBox">Remember me</label>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>
                </article>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}