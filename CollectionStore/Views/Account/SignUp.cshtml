@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card">
                <header class="card-header">
                    <h4 class="text-center">Sign up</h4>
                </header>
                <article class="card-body">
                    <form asp-controller="Account" asp-action="SignUp" method="post">
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control" placeholder="Username" />
                            <small><span asp-validation-for="UserName" class="text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <small><span asp-validation-for="Email" class="text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <small><span asp-validation-for="Password" class="text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirm password" />
                            <small><span asp-validation-for="PasswordConfirm" class="text-danger"></span></small>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </article>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/js/AlertFormVisibility.js" asp-append-version="true"></script>